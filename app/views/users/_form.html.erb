<%= display_errors(user) %>

<form method="post" action="<%= action %>">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>"

  <label for="user_email">Email</label>
  <input type="text"
         name="user[email]"
         id="user_email"
         value="<%= user.email %>">

  </br>

  <label for="user_password">Password</label>
  <input type="password"
         name="user[password]"
         id="user_password">

  </br>

  <input type="submit" value="Submit">
</form>
