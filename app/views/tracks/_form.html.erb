<form action="<%= action %>" method="post">
  <input type="hidden"
         name="_method"
         value="<%= method %>">

  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label for="track_name">Name</label>
  <input type="text"
         name="track[name]"
         id="track_name"
         value="<%= track.name %>">

  </br>

  <label for="track_track_style">Track Style</label>
  <% Track::TRACK_STYLES.each do |style| %>
    <input type="radio"
           name="track[track_style]"
           id="<%= style %>"
           value="<%= style %>"
           <%= "checked" if style == track.track_style %>>
    <label for="<%= style %>"><%= style %></label>
  <% end %>

  </br>

  <label for="track_album_id">Album</label>
    <select name="track[album_id]"
            id="track_album_id">
      <% Album.all.each do |album| %>
        <option value="<%= album.id %>"
                <%= "selected" if track.album == album %>>
          <%= album.name %>
        </option>
      <% end %>
    </select>

  </br>

  <label for="track_lyrics">Lyrics</label>
  <textarea name="track[lyrics]"
            id="track_lyrics"><%= track.lyrics %></textarea>

  </br>
  <input type="submit" value="Submit">
</form>
